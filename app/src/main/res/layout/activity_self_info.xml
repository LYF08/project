<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg">
    <android.support.v7.widget.Toolbar
        android:id="@+id/self_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_1" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="280dp"
        android:textSize="20dp"
        android:text="姓名:"
        android:clickable="true"/>

    <!--所有space都是用来填充不同条目间的缝隙-->

    <Space
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@id/tv_name"
        android:layout_below="@id/tv_name" />

    <TextView
        android:id="@+id/tv_dorm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space1"
        android:layout_alignRight="@id/tv_name"
        android:textSize="20dp"
        android:text="宿舍号:" />

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@id/tv_dorm"
        android:layout_below="@id/tv_dorm" />

    <TextView
        android:id="@+id/tv_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space2"
        android:layout_alignRight="@id/tv_name"
        android:textSize="20dp"
        android:text="学号:" />

    <Space
        android:id="@+id/space3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@id/tv_ID"
        android:layout_below="@id/tv_ID" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space3"
        android:layout_alignRight="@id/tv_name"
        android:textSize="20dp"
        android:text="联系方式:" />

    <Space
        android:id="@+id/space4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@id/tv_phone"
        android:layout_below="@id/tv_phone" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space4"
        android:layout_alignRight="@id/tv_name"
        android:textSize="20dp"
        android:text="昵称:" />

    <TextView
        android:id="@+id/alter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:drawableLeft="@drawable/ic_alter"
        android:text="修改"
        android:clickable="true"/>
    <!--android:drawableLeft:在文字之前加图标-->

</RelativeLayout>