<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="#FFF">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/publisher_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_1"/>
        <TextView
            android:id="@+id/publisher_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/publisher_image"
            android:textColor="#000"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/publisher_nickname"
            android:layout_toRightOf="@id/publisher_image"
            android:layout_marginLeft="10dp"
            android:textColor="#CCC"
            android:text="回复于1分钟前"/>
        <TextView
            android:id="@+id/post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18sp"
            android:layout_below="@id/publisher_image"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/image_bt_delete"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:id="@+id/image_bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/post_item_view"/>

        <View
            android:id="@+id/post_item_view"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="#cccccc"
            android:layout_below="@id/post_title"
            android:layout_marginTop="10dp">
        </View>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="#cccccc"
        android:layout_below="@id/rl_1"
        android:layout_marginTop="6dp">
    </View>
</RelativeLayout>