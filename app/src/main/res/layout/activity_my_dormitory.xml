<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_dorm2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <Button
        android:id="@+id/check_ele"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/dorm_num2"
        android:background="@drawable/button_main"
        android:text="电费查询"
        android:textSize="20dp" />

    <Button
        android:id="@+id/repair"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="133dp"
        android:background="@drawable/button_main"
        android:text="维修申请"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dorm_num"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/dorm_num2"
        android:layout_toStartOf="@+id/dorm_num2"
        android:text="宿舍号:"
        android:textSize="35dp"
        android:textColor="#4A4A4A"/>

    <TextView
        android:id="@+id/dorm_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:text="XXX"
        android:textSize="30dp"
        android:textColor="#4A4A4A"/>

    <Button
        android:id="@+id/check_water"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:background="@drawable/button_main"
        android:text="水费查询"
        android:textSize="20dp" />
</RelativeLayout>