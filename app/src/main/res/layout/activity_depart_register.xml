<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/timg">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_depart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <TextView
            android:id="@+id/toolbar_depart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离宿登记"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/depart_register"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:text="提 交"
        android:textColor="#000000"
        android:background="#00000000"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"/>
    <EditText
        android:id="@+id/et_departCause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:background="@null"
        android:layout_marginTop="35dp"
        android:layout_below="@id/toolbar_depart"
        android:gravity="top"
        android:hint="离宿原因"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#aaaaaa"
        android:layout_below="@id/et_departCause"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </View>
    <Button
        android:id="@+id/departTime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="    离宿时间"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@id/view1"
        android:background="@drawable/bg_button01"
        android:gravity="center_vertical|left"
        android:drawableRight="@drawable/ic_right" />
    <TextView
        android:id="@+id/tv_departTime"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/view1"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="15dp" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#aaaaaa"
        android:layout_below="@id/departTime"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </View>
    <Button
        android:id="@+id/backTime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="    回宿时间"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@id/view2"
        android:background="@drawable/bg_button01"
        android:gravity="center_vertical|left"
        android:drawableRight="@drawable/ic_right" />
    <TextView
        android:id="@+id/tv_backTime"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/view2"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="15dp" />
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#aaaaaa"
        android:layout_below="@id/backTime"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </View>
    <EditText
        android:id="@+id/et_contact1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="phone"
        android:scrollbars="vertical"
        android:background="@null"
        android:layout_below="@id/view3"
        android:gravity="center_vertical"
        android:hint="联系电话"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#aaaaaa"
        android:layout_below="@id/et_contact1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </View>
</RelativeLayout>